{
  "rules": {
    "data": {
      ".write": "auth.uid === 'script'",
      ".read": "auth.cron === true || auth.uid === 'script'",

      "$aid": {
        ".read": "(data.child('uid').val() === auth.uid)",
        ".write": "(data.exists() && (data.child('uid').val() === auth.uid)) || (!data.exists() && (newData.child('uid').val() === auth.uid))",

        "timestamps": {
          "registration": {
            ".write": "!data.exists()"
          }
        }
      }
    }
  }
}
