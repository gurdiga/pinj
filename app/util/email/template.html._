<% _(results).each(function(client) { %>
  <h2><%= client.label %></h2>

  <% _(client.results).each(function(level) { %>
    <h3><%= level.label %></h3>

    <% _(level.results).each(function(section) { var recordCount = 1; %>
      <h4><%= section.label %></h4>

      <table style="<%= css.table %>">
        <thead>
          <tr>
            <th style="<%= css.th %>">#</th>

            <% _(section.results.columns).each(function(column) { %>
              <% if (column.show) { %>
                <th style="<%= css.th %>"><%= column.title %></th>
              <% } %>
            <% }) %>
          </tr>
        </thead>

        <tbody>
          <% _(section.results).each(function(court) { %>
            <% _(court.results).each(function(row) { %>
              <% if (recordCount <= MAX_ROWS_PER_SECTION) { %>
                <tr>
                  <td style="<%= css.td %>"><%= recordCount %></td>
                  <% _(section.results.columns).each(function(column) { %>
                    <% if (column.show) { %>
                      <% if (column.link) { %>
                        <td style="<%= css.td %>">
                          <a href="<%= row[column.index] %>"><%= column.title %></a>
                        </td>
                      <% } else { %>
                        <td style="<%= css.td %>"><%- row[column.index].trim() %></td>
                      <% } %>
                    <% } %>
                  <% }) %>
                </tr>
              <% } else if (recordCount === MAX_ROWS_PER_SECTION + 1) { %>
                <tr>
                  <td style="<%= css['td.too-many-rows'] %>" colspan="<%= row.length %>">
                    Sunt prea multe rezultate pentru a fi incluse în email. Puteţi lista toate rezultatele pe
                    <a href="http://instante.justice.md/cms/">Portalul Instanţelor Naţionale de Judecată</a>.
                  </td>
                </tr>
              <% }; recordCount++ %>
            <% }) %>
          <% }) %>
        </tbody>
      </table>
    <% }) %>
  <% }); %>
<% }); %>
